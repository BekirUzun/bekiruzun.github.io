---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "categories" : [
      {%- for category in post.categories -%}
      	"{{ category }}" {% unless forloop.last %},{% endunless %}
      {%- endfor -%}
	  ],
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ post.url | absolute_url }}",
      "date"     : "{{ post.date }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]