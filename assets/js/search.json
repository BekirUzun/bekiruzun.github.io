---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "tags" : [
      {%- for category in post.tags -%}
      	"{{ category }}" {% unless forloop.last %},{% endunless %}
      {%- endfor -%}
	  ],
      "category"     : "{{ post.category }}",
      "url"      : "{{ post.url | absolute_url }}",
      "date"     : "{{ post.date }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]